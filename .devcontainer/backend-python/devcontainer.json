{
    "name": "Backend Python (Dev)",
    // 指向你的基礎 docker-compose.yml 和 override 檔案
    "dockerComposeFile": [
        "../../docker-compose.yml", // 相對路徑指向專案根目錄
        "../../docker-compose.override.yml" // 明確包含 override 文件
    ],
    // 指定 Docker Compose 文件中哪個服務作為 Dev Container 的主要環境
    "service": "backend-python", // 我們開發主要在 web 服務中進行
    // 指定 VS Code 在容器內開啟哪個資料夾作為工作區
    // 這應與 docker-compose.override.yml 中 volumes 的目標路徑一致
    "workspaceFolder": "/workspace",
    "updateRemoteUserUID": false, // <<< 新增：停用 UID/GID 同步
    "features": {
        // --- 正確：確保 Git feature 存在 ---
        "ghcr.io/devcontainers/features/git:1": {}
        // 可以加入其他需要的 features，例如 Docker-in-Docker, Node.js 等
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.pylance",
                //"ms-python.vscode-pylance",
                "ms-python.isort",
                "ms-vscode-remote.remote-containers",
                "ms-azuretools.vscode-docker",
                "njpwerner.autodocstring",
                "ms-python.debugpy",
                // "ms-python.black-formatter", // 會造成重構時的錯誤
                "ms-python.pylint", // 添加 Pylint 擴充
                "mtxr.sqltools", // SQLTools 核心
                "mtxr.sqltools-driver-pg" // <<< 修改：使用 PostgreSQL Driver
                // "mtxr.sqltools-driver-sqlite" // <<< 移除 SQLite Driver
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.analysis.typeCheckingMode": "basic",
                "python.languageServer": "Pylance",
                "editor.formatOnSave": true,
                // "python.formatting.provider": "black", // 明確指定 Black
                "python.linting.pylintEnabled": true,
                "python.linting.enabled": true,
                "python.testing.pytestEnabled": true,
                "python.testing.pytestArgs": [
                    "backend-python/tests"
                ],
                "sqltools.connections": [
                    {
                        "name": "Docker DB (Dev)", // 連線名稱
                        "driver": "PostgreSQL",
                        "previewLimit": 50,
                        "server": "db", // Docker Compose 中的服務名稱
                        "port": 5432,
                        "database": "${containerEnv:POSTGRES_DB}", // 從環境變數讀取
                        "username": "${containerEnv:POSTGRES_USER}" // 從環境變數讀取
                        // 密碼建議不在這裡硬編碼，SQLTools 會提示輸入或考慮其他安全方式
                    }
                ],
                "sqltools.useNodeRuntime": true, // 保持 Node Runtime for SQLTools
                "sqltools.formatLanguage": [
                    "sql",
                    "postgres"
                ], // 可以更新語言
                "sqltools.autoOpenSessionFiles": true,
                "python.linting.pylintArgs": [
                    "--rcfile=.pylintrc" // 或者您的設定檔的實際路徑
                ]
            }
        }
    },
    // --- Container Lifecycle ---
    // 轉發端口
    "forwardPorts": [
        8001, // Gunicorn/Flask (主機端口) -> 8000 (容器端口)
        5432, // PostgreSQL (主機端口) -> 5432 (容器端口)
        5000, // 新增：Flask (主機端口) -> 5000 (容器端口)
        5251, // Frontend (如果 VS Code 也需要轉發)
        3000, // Node Service 1 (如果需要)
        4000  // Node Service 2 (如果需要)
    ],
    // 指定需要隨 Dev Container 一起啟動的其他服務
    "runServices": [
        "db",
        "frontend", 
        "node-services"
    ],
    "postCreateCommand": "sudo apt-get update && sudo apt-get install -y --no-install-recommends && pip install --upgrade pip && pip install --user -r /workspace/backend-python/requirements.txt -r /workspace/backend-python/requirements-dev.txt --no-warn-script-location && echo 'export PATH=\"/home/vscode/.local/bin:$PATH\"' >> ~/.bashrc && sudo mkdir -p /workspace/logs && sudo chown vscode:vscode /workspace/logs && sudo mkdir -p /workspace/data/web_site_configs && sudo chown vscode:vscode /workspace/data /workspace/data/web_site_configs && sudo cp /workspace/backend-python/src/crawlers/configs/bnext_crawler_config.json /workspace/data/web_site_configs/ && sudo chown vscode:vscode /workspace/data/web_site_configs/bnext_crawler_config.json",
    "postStartCommand": "export PATH=\"/home/vscode/.local/bin:$PATH\"",
    "remoteUser": "vscode"
}
