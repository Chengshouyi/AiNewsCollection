{
    "name": "AI News Crawler Dev",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "workspaceFolder": "/workspace",
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
    // 新增 Volume 掛載配置
    "mounts": [
        "source=ai-news-data,target=/workspace/data,type=volume"
        //"source=${localWorkspaceFolder}/data,target=/workspace/data,type=bind,consistency=cached"
    ],
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.pylance",
                "ms-python.vscode-pylance",
                "ms-python.isort",
                "ms-vscode-remote.remote-containers",
                "ms-azuretools.vscode-docker",
                "njpwerner.autodocstring",
                "ms-python.debugpy",
                "mtxr.sqltools",
                "mtxr.sqltools-driver-sqlite"
            ],
            "settings": {
                "python.defaultInterpreterPath": "/usr/local/bin/python",
                "python.analysis.typeCheckingMode": "basic",
                "python.languageServer": "Pylance",
                "editor.formatOnSave": true,
                "python.analysis.extraPaths": [
                    "/usr/local/bin"
                ],
                "pylint.enabled": true,
                "[python]": {
                    "editor.defaultFormatter": "ms-python.python"
                },
                "python.testing.pytestEnabled": true,
                "python.testing.pytestArgs": [
                    "tests"
                ],
                "sqltools.connections": [
                    {
                        "database": "/workspace/data/news.db",
                        "driver": "sqlite"
                    }
                ],
                "sqltools.useNodeRuntime": true,
                "sqltools.formatLanguage": [
                    "sql",
                    "sqlite"
                ],
                "sqltools.autoOpenSessionFiles": true
            }
        }
    },
    "remoteUser": "vscode",
    "postCreateCommand": "pip install --upgrade pip && pip install -r requirements.txt && pip install -r requirements-dev.txt",
    "remoteEnv": {
        "DATABASE_PATH": "/workspace/data/news.db",
        "PYTHONPATH": "${containerWorkspaceFolder}",
        "PATH": "${containerEnv:PATH}:/home/vscode/.local/bin"
    },
    "forwardPorts": [
        5000
    ]
}