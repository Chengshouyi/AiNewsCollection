{
  "name": "node-services",
  "private": true,
  "workspaces": [
    "api-gateway",
    "websocket-server"
  ],
  "scripts": {
    "dev": "concurrently \"pnpm --filter api-gateway dev\" \"pnpm --filter websocket-server dev\"",
    "build": "pnpm --filter @app/logger build && pnpm --filter api-gateway build && pnpm --filter websocket-server build",
    "start": "concurrently \"pnpm --filter api-gateway start\" \"pnpm --filter websocket-server start\"",
    "test:logger": "pnpm --filter @app/logger test",
    "test:logger:cov": "pnpm --filter @app/logger test:cov",
    "test:all": "pnpm --filter @app/logger test && pnpm --filter api-gateway test && pnpm --filter websocket-server test",
    "test:e2e:all": "pnpm --filter api-gateway test:e2e && pnpm --filter websocket-server test:e2e",
    "test:cov:all": "pnpm --filter @app/logger test:cov && pnpm --filter api-gateway test:cov && pnpm --filter websocket-server test:cov"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.4"
  },
  "pnpm": {
    "overrides": {
      "@nestjs/common": "^11.0.0",
      "@nestjs/config": "^4.0.2",
      "@nestjs/core": "^11.0.0",
      "@nestjs/jwt": "^11.0.0",
      "@nestjs/microservices": "^11.1.0",
      "@nestjs/passport": "^11.0.0",
      "@nestjs/platform-express": "^11.0.0",
      "@nestjs/platform-socket.io": "^11.1.0",
      "@nestjs/swagger": "^11.2.0",
      "@nestjs/terminus": "^11.0.0",
      "@nestjs/websockets": "^11.1.0"
    }
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.0",
    "@nestjs/common": "^11.1.0",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.0",
    "@nestjs/microservices": "^11.1.0",
    "@nestjs/platform-express": "^11.1.0",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/testing": "^11.1.0",
    "axios": "^1.9.0",
    "express": "^5.1.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "socket.io-client": "^4.8.1"
  }
}
